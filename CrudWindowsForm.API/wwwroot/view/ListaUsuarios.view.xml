<mvc:View
    controllerName="crudBasico.controller.ListaUsuarios"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">

    <Page title="{i18n>TituloListaUsuario}">
        <Toolbar>
            <ToolbarSpacer/>
            <Button icon="sap-icon://add" text="{i18n>BotaoNovoUsuario}" press=".aoClicarEmCadastrar" type="Accept"/>
        </Toolbar>
        <Table 
            headerText="{Lista de usuÃ¡rios}"
            width="auto"
            items="{usuarios>/listaUsuarios}"
            class="alinhaTexto"
            alternateRowColors="true">
        
        <columns>
            <Column hAlign="Begin" width="10rem">
                
                <Text text="Id"/>
            </Column>
            <Column hAlign="Begin">
                
                <Text text="Nome"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem type="Navigation" press=".aoClicarNoItemDaLista">
                <cells>
                    <ObjectIdentifier title="{usuarios>id}" />
                    <ObjectIdentifier title="{usuarios>nome}" text="{usuarios>email}"/>
                </cells>
            </ColumnListItem>
		</items>
    </Table>
    </Page>
</mvc:View>