<mvc:View
    controllerName="crudBasico.controller.ListaUsuarios"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">

    <Page title="{i18n>TituloListaUsuario}" titleAlignment="Start">
        <headerContent>
            <SearchField width="auto" search=".pesquisarUsuario"/>
            <Button icon="sap-icon://add" text="{i18n>BotaoNovoUsuario}" press=".aoClicarEmCadastrar" type="Emphasized"/>
        </headerContent>
        <Table 
            id="listaDeUsuarios"
            width="auto"
            items="{usuarios>/}"
            class="alinhaTexto"
            alternateRowColors="true"
            growing="true" 
            growingThreshold="5"
            noData="{i18n>ListaUsuarios.NaoHaUsuariosCadastrados}">
        <columns>
            <Column hAlign="Begin" width="10rem">
                
                <Text text="{i18n>TextoId}"/>
            </Column>
            <Column hAlign="Begin">
                
                <Text text="{i18n>TextoNome}"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem type="Navigation" press=".aoClicarNoItemDaLista">
                <cells>
                    <ObjectIdentifier title="{usuarios>id}" />
                    <ObjectIdentifier title="{usuarios>nome}" text="{usuarios>email}"/>
                </cells>
            </ColumnListItem>
		</items>
    </Table>
    </Page>
</mvc:View>