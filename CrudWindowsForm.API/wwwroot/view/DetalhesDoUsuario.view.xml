<mvc:View
	controllerName="crudBasico.controller.DetalhesDoUsuario"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Page title="{i18n>TituloDetalhesUsuario}" titleAlignment="Start" showNavButton="true" navButtonPress=".aoClicarEmVoltar">
		<headerContent>
            <Button icon="sap-icon://edit" 
                    text="{i18n>BotaoEditar}" 
                    type="Emphasized"
                    press=".aoClicarEmEditar"
            />
            <Button icon="sap-icon://delete" 
                    text="{i18n>BotaoDeletar}" type="Emphasized" press=".aoClicarEmDeletar"/>
        </headerContent>
        <VBox class="sapUiSmallMargin" alignItems="Start">
                <HBox class="sapUiMediumMarginTop" justifyContent="SpaceAround" width="20rem">
                    <HBox justifyContent="SpaceBetween" width="100%">
                        <Label text="Nome" />
                        <Text id="nameText" text="{usuario>/nome}" />
                    </HBox>
                </HBox>
                <HBox justifyContent="SpaceAround" width="20rem">
                    <HBox justifyContent="SpaceBetween" width="100%">
                        <Label text="Email" />
                        <Text text="{usuario>/email}" />
                    </HBox>
                </HBox>
                <HBox justifyContent="SpaceAround" width="20rem">
                    <HBox justifyContent="SpaceBetween" width="100%">
                        <Label text="Data Nascimento" />
                        <Text text="{= ${usuario>/dataNascimento} !== null ? ${path: 'usuario>/dataNascimento', 
                                                                                type:'sap.ui.model.type.Date'} 
                                                                                : ${i18n>PlaceholderAvisoDataNascimentoEditar}}" />
                    </HBox>
                </HBox>
                <HBox width="20rem">
                    <HBox justifyContent="SpaceBetween" width="100%">
                        <Label text="Data Criação" />
                        <Text text="{usuario>/dataCriacao}" />
                    </HBox>
                </HBox>
		</VBox>
	</Page>
</mvc:View>