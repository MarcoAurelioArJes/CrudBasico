<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
   <Dialog id="dialogParaConfirmacao" icon="sap-icon://warning">
      <content>
         <Title class="sapUiResponsiveMargin" text="{i18n>PerguntaDialogConfirmacao}" />
      </content>
      <beginButton>
         <Button
            text="{i18n>BotaoCancelar}"
            press=".fecharDialog"/>
      </beginButton>
      <endButton>
         <Button
            text="{i18n>BotaoConfirmar}"
            press=".confirmarDialog"/>
      </endButton>
   </Dialog>
</core:FragmentDefinition>